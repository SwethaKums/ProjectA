@model MyCartMVC.Models.CustomerRegistration

@{
    ViewData["Title"] = "Login";
}
<style>
    .errmessage{
        color:red;
    }
    body {
        background:#c7f2c7
    }
        .row{

       /* height:100vh;
        backgound-size:cover;
        background-position:center;
        background-repeat:no-repeat;*/
            display: flex;
            align-items: center;
            justify-content: center;
            background-position: top;
    }
    .first{
             display: flex;
                align-items: center;
                justify-content: center;
                background-position: top;

    }
    
    
</style>

<div class="first">
<h1>CustomerLogin</h1>
</div>

<div class="row" >
    <div class="col-md-4">
        <form asp-action="Login" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" style="font-size:20px" class="control-label"></label>
                <input asp-for="CustomerName"  class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Password" style="font-size:20px" class="control-label"></label>
                <input asp-for="Password" type="password"  class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
          <br/>
            <div class="form-group">
                <input type="submit" style="background-color:black;color:white" value="Login" class="btn btn-primary" />
            </div>
            
            @if (ViewBag.FailureMessage != null)
            {
                <p class="errmessage">@ViewBag.FailureMessage</p>
            }
            @if (ViewBag.SuccessMessage!=null)
            {
              <script type="text/javascript">
               window.onload = function () {
              alert("@ViewBag.SuccessMessage")
            };
               </script>
            }
           @* @if (TempData["message"] != null)
            {
                <script>
                    alert('@TempData["message"]');
                </script>
            }*@
          
           
        </form>
        <a asp-action="Registration" asp-controller="Customer">Registration</a>
    </div>
    
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
