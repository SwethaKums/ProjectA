<div class="row">

   
    <div class="col-md-4">
        <form asp-action="Registration" onsubmit=" validation()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExecutiveName" style="font-size:20px" class="control-label"></label>
                <input asp-for="ExecutiveName" class="form-control" />
                <span asp-validation-for="ExecutiveName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExecutiveAge" style="font-size:20px" class="control-label"></label>
                <input asp-for="ExecutiveAge"  class="form-control" />
                <span asp-validation-for="ExecutiveAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" style="font-size:20px" class="control-label"></label>
                <input asp-for="PhoneNumber" required="<=10" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" style="font-size:20px" class="control-label"></label>
                <input asp-for="Password" id="pass" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" style="background-color:black;color:white" value="Register" class="btn btn-primary" />
            </div>
        </form >
        <a asp-action="Login" asp-controller="Executive">Login</a>
    </div>
   
</div>
